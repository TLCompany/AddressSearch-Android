<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddDetailActivity">

    <Button
            android:text="입력완료"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/completeButton"
            android:background="@drawable/search_button" android:textColor="#ffffff" android:textStyle="bold"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/searchTermEditText"
            app:layout_constraintEnd_toEndOf="@+id/searchTermEditText" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/searchTermEditText"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rdAddrsTextView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textSize="14dp" android:textColor="#818181"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/jbAddrsTextView2"/>
    <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="#eeeeee"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"/>
    <ImageButton
            app:srcCompat="@drawable/close"
            android:id="@+id/backButton" android:background="#00FFFFFF" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView"
            android:scaleType="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
            android:text="상세주소 입력"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            app:layout_constraintTop_toTopOf="@+id/backButton"
            app:layout_constraintBottom_toBottomOf="@+id/backButton" android:textStyle="bold"
            android:textColor="#000000" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/jbAddrsTextView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textSize="16dp" android:textColor="#000000"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/zipCodeTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textSize="14dp" android:textColor="#545454"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/rdAddrsTextView2" android:layout_marginTop="4dp"/>
    <EditText
            android:background="@drawable/edit_text_border"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="12dp"
            android:id="@+id/searchTermEditText"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            app:layout_constraintStart_toStartOf="@+id/zipCodeTextView"
            app:layout_constraintEnd_toEndOf="@+id/zipCodeTextView" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/zipCodeTextView" android:hint="상세주소를 입력해 주세요."/>
</android.support.constraint.ConstraintLayout>